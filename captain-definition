  "dockerfileLines": [
      "FROM python:3.7.6-buster",
      "COPY ./requirements.txt /requirements.txt",
      "RUN pip install -r /requirements.txt",
      "RUN useradd -ms /bin/bash admin",
      "RUN mkdir /app",
      "COPY ./app/ /app",
      "WORKDIR /app",
      "RUN chown -R admin:admin /app",
      "RUN chmod 755 /app",
      "USER admin",
      "EXPOSE 80",
      "COPY ./runserver.sh /usr/local/bin/",

      "CMD [\"sh\", \"runserver.sh\"]"
